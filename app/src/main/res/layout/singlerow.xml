<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="5dp" android:elevation="4dp" app:cardUseCompatPadding="true">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="151dp"
            android:layout_height="141dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/e10" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="266dp"
            android:layout_height="29dp"
            android:layout_below="@+id/img1"
            android:layout_centerHorizontal="true"
            android:text="This is Header Text"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="279dp"
            android:layout_height="28dp"
            android:layout_below="@+id/t1"
            android:layout_centerHorizontal="true"
            android:text="This is Description Text"
            android:textSize="20dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>